#include <iostream>
using namespace std;

inline int add(int x, int y)
{
    int c;
    c=x+y;
    return c;
}
inline int avg(int a, int b,int c)
{
    int d;
    d=(a+b+c)/3;
    return d;
}

int main()
{
    int m,n,q,o,p;
    m=40;
    n=2;
    q=10;
    o=add(m,n);
    
    cout <<"Addition is:"<<o;
    
    p=avg(m,n,q);
    cout <<"\nAverage is:"<<p;
    return 0;
}
